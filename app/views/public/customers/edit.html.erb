
  <div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-lg-8 ">
 <h5 class="text-left">会員情報編集</h5>

<%= form_with model: @customer,url: customers_my_page_path ,method: :PATCH,local:true do |f| %>

 <div class="form-group row">
    <div class="col-sm-4"><%= f.label :氏名 %></div>
    <div class="col-sm-4"><%= f.text_field :last_name, placeholder:"令和" %></div>
   <div class="col-sm-4"><%= f.text_field :first_name, placeholder:"道子"%></div>
  </div>

  <div class="form-group row">
     <div class="col-sm-4"><%= f.label :フリガナ %></div>
     <div class="col-sm-4"><%= f.text_field :last_name_kana, placeholder:"レイワ" %></div>
     <div class="col-sm-4"><%= f.text_field :first_name_kana, placeholder:"ミチコ" %></div>
  </div>

 <div class="form-group row">
     <div class="col-sm-4"><%= f.label :郵便番号 %></div>
     <div class="col-sm-4"><%= f.text_field :postal_code,placeholder:"0000000" %></div>
  </div>

  <div class="form-group row">
     <div class="col-sm-4"><%= f.label :住所 %></div>
     <div class="col-sm-4"><%= f.text_field :address,placeholder:"東京都渋谷区代々木神園待ち0-0" %></div>
  </div>

 <div class="form-group row">
     <div class="col-sm-4"><%= f.label :電話番号 %></div>
     <div class="col-sm-4"><%= f.text_field :phone_number,placeholder:"0000000000" %></div>
  </div>
 <div class="form-group row">
     <div class="col-sm-4"><%= f.label :メールアドレス %></div>
     <div class="col-sm-5"><%= f.email_field :email, autofocus: true,placeholder:"sample@example.com" %></div>
  </div>  
<%= f.submit "編集内容を保存",class:"btn btn-success"%>
<% end %>
<%= link_to "退会する", customers_unsubscribe_path ,class:"btn btn-danger"%>
</div>
</div>
</diV>
