<div class="container">
 <div class="row my-5">
  <h3 class="under px-4 mx-5">会員情報編集</h3>
 </div>

<div class="container">
 <%= form_with model: @customer,url: customers_my_page_path ,method: :PATCH,local:true do |f| %>

 <div class="form-group row mt-5">
  <div class="col-sm-2"><%= f.label :氏名 %></div>
  <div class="col-sm-3"><%= f.text_field :last_name, placeholder:"令和",class:"form-control border-dark" %></div>
  <div class="col-sm-3"><%= f.text_field :first_name, placeholder:"道子",class:"form-control border-dark" %></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-2"><%= f.label :フリガナ %></div>
  <div class="col-sm-3"><%= f.text_field :last_name_kana, placeholder:"レイワ",class:"form-control border-dark" %></div>
  <div class="col-sm-3"><%= f.text_field :first_name_kana, placeholder:"ミチコ",class:"form-control border-dark" %></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-2"><%= f.label :郵便番号 %></div>
  <div class="col-sm-3"><%= f.text_field :postal_code,placeholder:"0000000",class:"form-control border-dark" %></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-2"><%= f.label :住所 %></div>
  <div class="col-sm-8"><%= f.text_field :address,placeholder:"東京都渋谷区代々木神園待ち0-0",class:"form-control border-dark" %></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-2"><%= f.label :電話番号 %></div>
  <div class="col-sm-3"><%= f.text_field :phone_number,placeholder:"0000000000",class:"form-control border-dark" %></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-2"><%= f.label :メールアドレス %></div>
  <div class="col-sm-3"><%= f.email_field :email, autofocus: true,placeholder:"sample@example.com" ,class:"form-control border-dark"%></div>
 </div>

 <div class="row mt-5 mb-5">
  <div class="offset-sm-2 col-sm-6"><%= f.submit "変更内容を保存",class:"btn btn-outline-dark font-weight-bold "%></div>
  <% end %>
  <% if customer_signed_in?  %>
  <div class="col-sm-2"><%= link_to "退会する", customers_unsubscribe_path ,class:"btn btn-outline-danger px-3"%></div>
  <% end %>
 </div>
</diV>
