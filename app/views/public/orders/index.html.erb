<div class="container">
  <div class="row"><h4>注文履歴一覧</h4></div>
  <div class="row">
    <table class="table">
      <tr><th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th></tr>
      <% @orders.each do |order| %>
      <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><span>〒</span><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(order), class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>