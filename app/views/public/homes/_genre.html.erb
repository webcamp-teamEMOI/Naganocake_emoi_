<table class="table table-bordered  border-dark genre-table">
  <thead class="genre-thead">
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody class="genre-tbody">
    <% genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_path('search[value]': genre.name, 'search[how]': "genre"),class:"text-dark" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>