<div class="container ">
  
 <div class="row">
  <h5>配送先登録/一覧</h5>
 </div>
 
<%= form_with model:@address,local:true do |f| %>
<div class="row">
<div class="col-lg-3"><%=f.label :郵便番号（ハイフンなし）,class:"form-label"%></div>
<div class="col-lg-6 form-inline" style="padding: 3px;"><%=f.text_field :postal_code,placeholder:"0000000" ,class:"form-control" %></div>
</div>
<div class"row">   </div>
<div class="row">
<div class="col-lg-3"><%=f.label :住所　%></div>
<div class="col-lg-6 form-inline" style="padding: 3px;"><%=f.text_field :address,placeholder:"東京都渋谷区代々木神園待ち0-0" ,class:"form-control"%></div>
</div>
<div class="row">
<div class="col-lg-3"><%=f.label :宛名 %></div>
<div class="col-lg-6 form-inline" style="padding: 3px;"><%=f.text_field :name ,placeholder:"令和道子",class:"form-control"%></div>
<div class="col-lg-1"><%=f.submit "新規登録" ,class:"btn btn-success" %></div>
<% end %>
</div>

<div class="row">
 <div class="col-lg-9">
  <table class="table table-bordered">
   <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する",edit_address_path(address.id),class:"btn btn-success" %>
      <%= link_to "削除する",address_path(address.id),method: :delete,class:"btn btn-danger" %>
      </td>
    </tr>
  </tbody>
<% end %>  
</table>
</div>
</div>

</div>
</div>
