<div class="container">
 <div class="row">
  <h3 class="under px-4 my-5">配送先登録/一覧</h3>
 </div>
</div>

<div class="container">
  <%= form_with model:@address,local:true do |f| %>

 <div class="form-group row">
  <div class="col-sm-3"><%=f.label :郵便番号（ハイフンなし）%></div>
  <div class="col-sm-3"><%=f.text_field :postal_code,placeholder:"0000000" ,class:"form-control border-dark" %></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-3"><%=f.label :住所　%></div>
  <div class="col-sm-6"><%=f.text_field :address,placeholder:"東京都渋谷区代々木神園待ち0-0" ,class:"form-control border-dark"%></div>
 </div>

 <div class="form-group row mt-2">
  <div class="col-sm-3"><%=f.label :宛名 %></div>
  <div class="col-sm-3"><%=f.text_field :name ,placeholder:"令和道子",class:"form-control border-dark"%></div>
  <div class="col-sm-3"></div>
  <div class="col-sm-2"><%=f.submit "新規登録" ,class:"btn btn-outline-dark px-4" %></div>
  <% end %>
 </div>

 <div class="row mt-5">
  <div class="col-sm-9 ">
    <table class="table table-bordered">
     <thead>
      <tr>
       <th>郵便番号</th>
       <th>住所</th>
       <th>宛名</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
      <% @addresses.each do |address| %>
      <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td><%= link_to "編集する",edit_address_path(address.id),class:"btn btn-outline-dark btn-sm mx-3" %>
          <%= link_to "削除する",address_path(address.id),method: :delete,class:"btn btn-outline-danger btn-sm ml-3" %>
       </td>
      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
 </div>
</div>
