<div class="container">
 <div class="row mt-5 ml-5">
  <h4 class="bg-light px-4 mx-5">配送先編集</h4>
 </div>
</div>

<div class="container">
 <%= form_with model:@address,local:true do |f| %>
 <div class="form-group row mt-5">
  <div class="col-sm-3"><%=f.label :郵便番号（ハイフンなし）%></div>
  <div class="col-sm-3"><%=f.text_field :postal_code,placeholder:"0000000" ,class:"form-control border-dark" %></div>
 </div>
 <div class="form-group row mt-3 ">
  <div class="col-sm-3"><%=f.label :住所　%></div>
  <div class="col-sm-7"><%=f.text_field :address,placeholder:"東京都渋谷区代々木神園待ち0-0" ,class:"form-control border-dark"%></div>
 </div>
 <div class="form-group row mt-3">
  <div class="col-sm-3"><%=f.label :宛名 %></div>
  <div class="col-sm-3"><%=f.text_field :name ,placeholder:"令和道子",class:"form-control border-dark"%></div>
  <div class="col-sm-4"></div>
  <div class="col-sm-2"><%=f.submit "変更内容を保存" ,class:"btn btn-success" %></div>
   <% end %>
 </div>
</div> 