<table class="table table-bordered  border-dark genre-table">
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_path('search[value]': genre.id, 'search[how]': "match"),class:"text-dark" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>