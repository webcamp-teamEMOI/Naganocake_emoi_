<div class="container mt-5">
  <div class="row">

    <div class="col-3 pt-5">
      <%= render 'genre', genres: @genres %>
    </div>

    <div class="col-9">
      <div class="row　ml-3">
      <h2 class="mb-3"><span class="font-weight-bold">商品一覧</span><span class="small">(全<%= @item_all.ids.count %>件)</span></h2>
      </div>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
            <% end %>
            <p class="my-2"><%= link_to item.name, item_path(item.id),class:"font-weight-bold text-dark" %></p>
            <p class="font-weight-bold text-dark mb-5">￥<%= item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
        </div>

        <div class="row justify-content-center">
        <%= paginate @items %>
        </div>
    </div>
</div>
