<div class="container">
  <div class="row">
    <div class="col">
      <% if @datas.empty? %>
        <h3>該当する商品はありません</h3>
      <% else %>
        <h3 class="my-3">"<%= @value %>"の検索結果</h3>
        <span>(全<%= @datas.count %>件)</span>
        <div class="col">
          <% @datas.each do |data| %>
            <div class="index_items">
              <div class="item_image">
                <%= link_to item_path(data.id) do %>
                  <%= attachment_image_tag data, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
                <% end %>
                <p><%= link_to data.name, item_path(data.id) %></p>
                <p>￥<%= data.price.to_s(:delimited) %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
