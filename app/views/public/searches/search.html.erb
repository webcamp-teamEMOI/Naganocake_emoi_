<div class="container">
  <div class="row">
    <div class="col-12">
      <% if @datas.empty? %>
        <h3>該当する商品はありません</h3>
      <% else %>
        <h3 class="my-3">"<%= @value %>"の検索結果<span class="small">(全<%= @datas.count %>件)</span></h3>
        <div class="row">
          <% @datas.each do |data| %>
            <div class="col-3 mb-3">
                <%= link_to item_path(data.id) do %>
                  <%= attachment_image_tag data, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
                <% end %>
                <p class="card-title"><%= link_to data.name, item_path(data.id) %></p>
                <p class="card-subtitle">￥<%= data.price.to_s(:delimited) %></p>
              </div>

          <% end %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
