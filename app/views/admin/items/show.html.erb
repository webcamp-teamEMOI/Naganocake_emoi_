<div class="container">
  <div class="row">
      <div class="col-12">
        <h3 class="my-5 under">商品詳細</h3>
      </div>
    <div class="col-5">
      <%= attachment_image_tag @item, :image, format: "jpeg", fallback: "no_image.jpg", size: "400x300" %>
    </div>
    <div class="col-6 offset-1">
      <div class="row">
        <div class="col-3 mb-3 font-weight-bold">商品名</div>
        <div class="col-8"><%= @item.name %></div>

        <div class="col-3 mb-3 font-weight-bold">商品説明</div>
        <div class="col-8"><%= @item.introduction %></div>

        <div class="col-3 mb-3 font-weight-bold">ジャンル</div>
        <div class="col-8"><%= @item.genre.name %></div>

        <div class="col-3 mb-3 font-weight-bold">税込価格<br>(税抜価格)</div>
        <div class="col-8"><%= @item.add_tax_price.to_s(:delimited) %>円 <br> (<%= @item.price.to_s(:delimited) %>円)</div>

        <div class="col-3 mb-3 font-weight-bold">販売ステータス</div>
        <div class="col-8">
          <% if @item.is_active? %>
            <span class="text-success font-weight-bold">販売中</span>
          <% else %>
            <span class="text-danger font-weight-bold">販売停止中</span>
          <% end %>
        </div>

        <div class="col-11">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-outline-dark" %>
        </div>

      </div>
    </div>
  </div>
</div>