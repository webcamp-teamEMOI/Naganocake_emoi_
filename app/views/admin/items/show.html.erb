<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @item, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
    </div>
    <div class="col">
      <div>
        <label>商品名</label>
        <%= @item.name %>
      </div>
      <div>
        <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      <div>
        <label>ジャンル</label>
        <%= @item.genre.name %>
      </div>
      <div>
        <label>税込価格<br>（税抜価格）</label>
        <%= @item.add_tax_price %>  (<%= @item.price %>)円
      </div>
      <div>
        <label>販売ステータス</label>
        <%= @item.is_active %>
      </div>
      <div>
        <%= link_to "新規登録", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>