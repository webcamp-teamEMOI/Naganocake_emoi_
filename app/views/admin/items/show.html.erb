<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @item, :image, format: "jpeg", fallback: "no_image.jpg", size: "200x150" %>
    </div>
    <div class="col">
      <div>
        <label>商品名</label>
        <%= @item.name %>
      </div>
      <div>
        <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      <div>
        <label>ジャンル</label>
        <%= @item.genre.name %>
      </div>
      <div>
        <label>税込価格<br>(税抜価格)</label>
        <%= @item.add_tax_price.to_s(:delimited) %>  (<%= @item.price.to_s(:delimited) %>)円
      </div>
      <div>
        <label>販売ステータス</label>
        <% if @item.is_active? %>
          <span class="text-success font-weight-bold">販売中</span>
        <% else %>
          <span class="text-secondary font-weight-bold">販売停止中</span>
        <% end %>
      </div>
      <div>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>