<div class="container">
  <h2>商品新規登録</h2>
  <div class="row">
    <div class="col">
      <%= form_with url:admin_items_path, model:@item, local:true do |f| %>
        <div>
          <label>商品画像</label>
          <%= f.attachment_field :image %>
        </div>
        <div>
          <label>商品名</label>
          <%= f.text_field :name, placeholder: "商品名" %>
        </div>
        <div>
          <label>商品説明</label>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
        </div>
        <div>
          <label>ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --"  %>
        </div>
        <div>
          <label>税抜価格</label>
          <%= f.text_field :price, placeholder: "1000" %>円
        </div>
        <div>
          <label>販売ステータス</label>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

