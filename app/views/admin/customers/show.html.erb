<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-3"><%= @customer.full_name %>さんの会員詳細</h3>
        <div class="row">
          <div class="offset-1 col-3 mb-3">会員ID</div>
          <div class="col-8"><%= @customer.id %></div>

          <div class="offset-1 col-3 mb-3">氏名</div>
          <div class="col-8"><%= @customer.full_name %></div>

          <div class="offset-1 col-3 mb-3 ">フリガナ</div>
          <div class="col-8 "><%= @customer.full_name_kana %></div>

          <div class="offset-1 col-3 mb-3">郵便番号</div>
          <div class="col-8"><%= @customer.postal_code %></div>

          <div class="offset-1 col-3 mb-3">住所</div>
          <div class="col-8"><%= @customer.address %></div>

          <div class="offset-1 col-3 mb-3">電話番号</div>
          <div class="col-8"><%= @customer.phone_number %></div>

          <div class="offset-1 col-3 mb-3 ">メールアドレス</div>
          <div class="col-8"><%= @customer.email %></div>

          <div class="offset-1 col-3 mb-3">会員ステータス</div>
          <div class="col-8">
            <% if @customer.is_deleted? %>
              <span class="text-secondary font-weight-bold">退会</span>
            <% else %>
              <span class="text-success font-weight-bold">有効</span>
            <% end %>
          </div>
        </div>

      <div class="offset-4 col-8">
      <%= link_to "編集する",edit_admin_customer_path(@customer),class:"btn btn-success mr-5" %>
      <%= link_to "注文履歴一覧を見る",admin_root_path(sort: 1),class:"btn btn-primary mx-3" %>
      </div>

    </div>

</div>
