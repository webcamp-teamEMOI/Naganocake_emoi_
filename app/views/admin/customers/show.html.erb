<div class="container">
  <div class="row">
    <div>
      <h3><%= @customer.full_name %>さんの会員詳細</h3>
    </div>

    <div class="row">
      <div class="col-sm-2">会員ID</div>
      <div class="col-sm-10"><%= @customer.id %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">氏名</div>
      <div class="col-sm-10"><%= @customer.full_name %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">フリガナ</div>
      <div class="col-sm-10"><%= @customer.full_name_kana %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">郵便番号</div>
      <div class="col-sm-10"><%= @customer.postal_code %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">住所</div>
      <div class="col-sm-10"><%= @customer.address %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">電話番号</div>
      <div class="col-sm-10"><%= @customer.phone_number %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">メールアドレス</div>
      <div class="col-sm-10"><%= @customer.email %></div>
    </div>

    <div class="row">
      <div class="col-sm-2">会員ステータス</div>
      <div class="col-sm-10">
        <% if @customer.is_deleted = false %>
          <span class="text-success">有効</span>
        <% else %>
          <span class="text-secondary">退会</span>
        <% end %>
      </div>
    </div>
    <div>
      <%= link_to "編集する",edit_admin_customer_path(@customer),class:"btn btn-success mx-3" %>
      <%= link_to "注文履歴一覧を見る",admin_root_path,class:"btn btn-primary mx-3" %>
    </div>
  </div>
</div>
