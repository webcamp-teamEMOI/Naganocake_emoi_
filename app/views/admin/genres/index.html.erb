<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3 col-11 col-sm-10 col-lg-8 col-xl-6">   
      <h5>ジャンル一覧・追加</h5>
      <div class="row">
        <%= form_with url: admin_genres_path, model: @genre, local: true do |f| %>
　　      <label>ジャンル名</label>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
      </div>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>
                ジャンル
              </th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
            <tbody>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
