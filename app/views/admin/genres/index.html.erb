<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">
      <h4 class="my-5 under"><u>ジャンル一覧・追加</u></h4>
    </div>
    <div class="col-4">
      <table class="table mt-3">
        <thead>
          <tr>
            <th colspan="2">
              ジャンル名
            </th>
          </tr>
        </thead>
          <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-dark" %></td>
          <% end %>
          <%= form_with url: admin_genres_path, model: @genre, local: true do |f| %>
            <%= f.text_field :name, placeholder: "ジャンル追加" %>
            <%= f.submit "追加", class: "btn btn-outline-dark ml-3" %>
          <% end %>
          </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
