<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3 col-11 col-sm-10 col-lg-8 col-xl-6">
      <h5>ジャンル編集</h5>
      <div class="row">
        <%= form_with url: admin_genre_path(@genre), model: @genre, local: true do |f| %>
　　      <label>ジャンル名</label>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
