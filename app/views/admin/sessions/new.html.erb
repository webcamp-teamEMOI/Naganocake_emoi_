<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10 text-center">
      <h5 class="m-3 text-left">管理者ログイン</h5>
      <%= form_with model:@admin, url: session_path(resource_name),local:true do |f| %>
        <div class="form-group row">
          <div class="col-sm-4"><%= f.label :メールアドレス %></div>
          <div class="col-sm-8"><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class:"form-control" %></div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"><%= f.label :パスワード %></div>
          <div class="col-sm-8"><%= f.password_field :password, autocomplete: "current-password",class:"form-control" %></div>
        </div>

        <div class="text-center">
          <%= f.submit "ログイン",class:"btn btn-primary px-5" %>
        </div>
      <% end %>

      <!--%= render "admin/shared/links" %>-->
    </div>
    <div class="col-lg-1"></div>


  </div>
</div>

