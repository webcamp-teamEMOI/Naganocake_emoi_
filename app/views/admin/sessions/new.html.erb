<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10 text-center">
      <h5 class="m-4 text-left font-weight-bold">管理者ログイン</h5>
      <%= form_with model:@admin, url: session_path(resource_name),local:true do |f| %>
        <div class="form-group row">
          <div class="offset-1 col-3 text-left"><%= f.label :メールアドレス %></div>
          <div class="col-6 mr-auto"><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class:"form-control" %></div>
        </div>

        <div class="form-group row">
          <div class="offset-1 col-3 text-left"><%= f.label :パスワード %></div>
          <div class="col-6 mr-auto mb-3"><%= f.password_field :password, autocomplete: "current-password",class:"form-control" %></div>
        </div>

        <div class="offset-4 col-2 mr-auto pl-2">
          <%= f.submit "ログイン",class:"btn btn-outline-dark px-5" %>
        </div>
      <% end %>

      <!--%= render "admin/shared/links" %>-->
    </div>
    <div class="col-lg-1"></div>


  </div>
</div>

