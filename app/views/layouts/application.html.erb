<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCakeEmoi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light p-5">
        <div class="container">
          <span>
            <%= link_to "ながのCAKE", root_path, class:"navbar-brand fas fa-birthday-cake" %>
          </span>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <div class="mx-5">
                  ようこそ、<%= current_customer.last_name %>さん！
                </div>
                <li>
                  <%= link_to "マイページ", customers_my_page_path(current_customer), class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "商品一覧", items_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "カート", cart_items_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to "商品一覧", admin_items_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "会員一覧", admin_customers_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "注文履歴一覧", admin_root_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "ジャンル一覧", admin_genres_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "About", about_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "商品一覧", items_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
                <li>
                  <%= link_to "ログイン", new_customer_session_path, class:"btn btn-sm btn-outline-secondary mr-5" %>
                </li>
              <% end %>
            </ul>
          </div>
          <% if admin_signed_in? %>
            <div class="row">
              <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
                <%= f.text_field 'search[value]', placeholder: "Search", size: "26x4" %><br>
                <span class="search-button col-xs-12 text-right">
                  <%= f.select 'search[how]', options_for_select({ "部分一致" => "partical", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "match" }) %>
                  <%= f.button :type => "submit", style: 'border-style: none; background: none;' do %>
                    <i class="fas fa-search"></i>
                  <% end %>
                </span>
              <% end %>
            </div>
          <% else %>
            <div class="row">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field 'search[value]', placeholder: "Search", size: "26x4" %><br>
                <span class="search-button col-xs-12 text-right">
                  <%= f.select 'search[how]', options_for_select({ "部分一致" => "partical", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "match" }) %>
                  <%= f.button :type => "submit", style: 'border-style: none; background: none;' do %>
                    <i class="fas fa-search"></i>
                  <% end %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
