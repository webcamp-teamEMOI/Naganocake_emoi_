<div class="container px-5 px-sm-0">
  <div class="row">
<div class="col-lg-1"></div>
    <div class="col-lg-10 ">
      <h5 class="m-3 text-left">ログイン</h5>
      <h6>会員の方はこちらからログイン</h6>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="form-group row">
          <div class="col-sm-4"><%= f.label :メールアドレス %></div>
          <div class="col-sm-5"><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class:"form-control" %></div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"><%= f.label :パスワード %></div>
          <div class="col-sm-5"><%= f.password_field :password, autocomplete: "current-password",class:"form-control" %></div>
        </div>

        <div class="text-center">
          <%= f.submit "ログイン",class:"btn btn-primary px-5" %>
        </div>
      <% end %>
<h6>会員登録がお済みでない方</h6><br>
<%= render "customers/shared/links" %>

</div>
</div>
</div>
